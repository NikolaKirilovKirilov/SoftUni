using System;

namespace ConsoleApp1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string figure = Console.ReadLine();
            double a, b, face;
            switch (figure)
            {
                case "square":
                    a = double.Parse(Console.ReadLine());
                    Console.WriteLine(face = a * a);
                    break;
                case "rectangle":
                    a = double.Parse(Console.ReadLine());
                    b = double.Parse(Console.ReadLine());
                    Console.WriteLine(face = a * b);
                    break;
                case "triangle":
                    a = double.Parse(Console.ReadLine());
                    b = double.Parse(Console.ReadLine());
                    Console.WriteLine(face = (a * b)/2);
                    break;
                case "circle":
                    a = double.Parse(Console.ReadLine());
                    Console.WriteLine(face = Math.PI * a * a);
                    break;
            }
        }
    }
}
